<div class="header">
  <h1> Artist Search </h1>

</div>
<div id="search-body">
  <p class="intro"> Enter an artist to see their most popular songs!</p>
  <p class="intro"> All images are linked to iTunes! </p>
<%= form_tag("/artist", method: "get") do %>
  <%= label_tag(:q, "Artist Search:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
<div id="results">
<% unless @results.nil? %>
<%  @results.each do |i| %>
<ul id="tracks">
  <li class="img"> <a href="<%=i['artistViewUrl'] %>"> <img src="<%=i['artworkUrl100'] %>" class="album-img"> </a>
   <div class="song-info">Album name: <%= i['collectionName'] %> <br> Track name: <%= i['trackName'] %> <br> Genre: <%= i['primaryGenreName'] %> </div> </li></ul>
<% end %>
<% end %>
</div>
</div>
