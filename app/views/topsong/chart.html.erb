<div class="header">
  <h1> Top Songs</h1>

</div>

  <div class="chartlist">
    <p class="intro"> Here are the top songs of the week! </p>
    <p class="intro"> (Provided by LastFM) </p>
    <div id="songschart">
  <% @results.each do |x| %>
  <ul ="songschart">
  <li class="img"><span class="chartnumber"><%= @counter %>: </span> <a href="<%=x['url']%>"> <img class="artistimg" src="<%= x['image'].first['#text']%>" /> </a> </li>
    <li> Artist:  <%= x['artist']['name'] %> </li>
    <li> Song: <%= x['name'] %> </li>
  <% @counter +=1 %>
  <% break if @counter == 25 %>
</ul>
  <% end %>
</div>
</div>
