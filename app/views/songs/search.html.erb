<div class="header">
  <h1> Song Search </h1>

</div>
<div id="search-body">
  <p class="intro"> Search your favorite songs for Arist and Album info! </p>
  <p class="intro"> All images are linked to iTunes! </p>
<%= form_tag("/songs", method: "get") do %>
  <%= label_tag(:q, "Song Search:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
<div id="results">
<% unless @results.nil? %>
<%  @results.each do |i| %>
<ul id="tracks">
  <li class="img"> <a href="<%=i['artistViewUrl'] %>"> <img src="<%=i['artworkUrl100'] %>" class="album-img"> </a>
   <div class="song-info"> Track name: <%= i['trackName'] %> <br> Artist: <%= i['artistName'] %> <br> Album name: <%= i['collectionName'] %> </div> </li></ul>
<% end %>
<% end %>
</div>
</div>
